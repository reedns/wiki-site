%h1 Listing pages

%table
  %tr
    %th Title
    %th Body
    %th
    %th
    %th

  - @pages.each do |page|
    %tr
      %td= page.title
      %td= page.body
      %td= link_to 'Show', page
      - if user_signed_in?
        %td= link_to 'Edit', edit_page_path(page)
        %td= link_to 'Destroy', page, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
- if user_signed_in?
  = link_to 'New Page', new_page_path
  |
  = link_to 'Log out', logout_path
- else
  = link_to 'Sign up', login_path
  |
  = link_to 'Sign in', signup_path
